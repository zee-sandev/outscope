{
  "name": "api",
  "version": "0.1.1",
  "private": true,
  "description": "Hono API backend with oRPC, Prisma, and Better Auth",
  "type": "module",
  "exports": {
    "./contracts": "./src/contracts/index.ts",
    "./schemas/*": "./src/schemas/*/index.ts"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "echo \"No tests yet\" && exit 0",
    "db:generate": "prisma generate",
    "db:pull": "prisma db pull",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "prisma:case-format": "cd prisma && npx prisma-case-format"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.5",
    "@hono/swagger-ui": "^0.5.2",
    "@orpc/client": "^1.9.3",
    "@orpc/contract": "^1.9.3",
    "@orpc/openapi": "^1.9.3",
    "@orpc/server": "^1.9.3",
    "@orpc/zod": "^1.9.3",
    "@outscope/orpc-hono": "workspace:*",
    "@prisma/client": "^6.17.0",
    "bcryptjs": "^3.0.2",
    "better-auth": "^1.3.27",
    "glob": "^11.0.3",
    "hono": "^4.9.10",
    "hono-pino": "^0.10.3",
    "jsonwebtoken": "^9.0.2",
    "pino": "^10.0.0",
    "pino-pretty": "^13.1.1",
    "prisma": "^6.17.0",
    "reflect-metadata": "^0.2.2",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.17",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "eslint": "^9.32.0",
    "tsx": "^4.7.1",
    "typescript": "^5.9.2"
  }
}
