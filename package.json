{
  "name": "@outscope",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:packages": "pnpm --filter @outscope/orpc-hono build && pnpm --filter @outscope/cli build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build:packages && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "prettier": "^3.7.4",
    "turbo": "^2.7.4",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "overrides": {
      "glob": "^11.0.0",
      "rimraf": "^6.0.0",
      "inflight": "npm:@pnpm/inflight@1.0.0"
    }
  }
}
